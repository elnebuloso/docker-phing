<?xml version="1.0" encoding="UTF-8"?>


<project name="commons:template:symfony4">


    <!-- extending commons -->
    <import file="/srv/phing/commons.xml"/>


    <!-- bundle:project -->
    <patternset id="patternsetBundleProject">
        <include name="**"/>
        <exclude name=".env"/>
        <exclude name=".env.dist"/>
    </patternset>


    <!-- test:phplint -->
    <patternset id="patternsetTestPhpLint">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phpcpd -->
    <patternset id="patternsetReportPhpCpd">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phpcs -->
    <patternset id="patternsetReportPhpCs">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phpdepend -->
    <patternset id="patternsetReportPhpDepend">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phploc -->
    <patternset id="patternsetReportPhpLoc">
        <include name="src/**/*.php"/>
        <include name="tests/**/*.php"/>
    </patternset>


    <!-- report:phpmd -->
    <patternset id="patternsetReportPhpMd">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phpmetrics -->
    <property name="reportPhpMetricsDirectories" value="src"/>


</project>