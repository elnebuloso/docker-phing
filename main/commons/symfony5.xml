<?xml version="1.0" encoding="UTF-8"?>


<project name="commons:template:symfony5">


    <!-- extending commons -->
    <import file="/srv/phing/commons.xml"/>


    <!-- bundle:project -->
    <patternset id="patternset_bundle_project">
        <include name="${project_folder_main}/**"/>
        <exclude name="${project_folder_main}/.env"/>
        <exclude name="${project_folder_main}/.env.dist"/>
        <exclude name="**/.sass-cache/**"/>
        <exclude name="**/node_modules/**"/>
    </patternset>


    <!-- test:phplint -->
    <patternset id="patternset_test_phplint">
        <include name="**/*.php"/>
        <exclude name="vendor/**"/>
    </patternset>


    <!-- report:phpcpd -->
    <patternset id="patternset_report_phpcpd">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phpdepend -->
    <patternset id="patternset_report_phpdepend">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phploc -->
    <patternset id="patternset_report_phploc">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phpmd -->
    <patternset id="patternset_report_phpmd">
        <include name="src/**/*.php"/>
    </patternset>


    <!-- report:phpmetrics -->
    <property name="report_phpmetrics_directories" value="src"/>


    <target name="start">
        <runtarget target="clean:dist"/>
        <runtarget target="docker:compose:up"/>
        <runtarget target="docker:compose:ps"/>
    </target>


    <target name="stop">
        <runtarget target="docker:compose:down"/>
    </target>


    <target name="reports">
        <runtarget target="clean:reports"/>
        <runtarget target="test:phplint"/>
        <runtarget target="report:phpcpd"/>
        <runtarget target="report:phpdepend"/>
        <runtarget target="report:phploc"/>
        <runtarget target="report:phpmd"/>
        <runtarget target="report:phpmetrics"/>
    </target>


</project>