<?xml version="1.0" encoding="UTF-8"?>


<project name="commons:template:standard">


    <!-- extending commons -->
    <import file="/srv/phing/commons.xml"/>


    <!-- bundle:project -->
    <patternset id="patternset.bundle.project">
        <include name="**"/>
    </patternset>


    <!-- test:phplint -->
    <patternset id="patternset.test.phplint">
        <include name="**/*.php"/>
        <include name="tests/**"/>
        <exclude name="vendor/**"/>
    </patternset>


    <!-- report:phpcpd -->
    <patternset id="patternset.report.phpcpd">
        <include name="**/*.php"/>
        <exclude name="tests/**"/>
        <exclude name="vendor/**"/>
    </patternset>


    <!-- report:phpcs -->
    <patternset id="patternset.report.phpcs">
        <include name="**/*.php"/>
        <exclude name="tests/**"/>
        <exclude name="vendor/**"/>
    </patternset>


    <!-- report:phpdepend -->
    <patternset id="patternset.report.phpdepend">
        <include name="**/*.php"/>
        <exclude name="tests/**"/>
        <exclude name="vendor/**"/>
    </patternset>


    <!-- report:phploc -->
    <patternset id="patternset.report.phploc">
        <include name="**/*.php"/>
        <exclude name="vendor/**"/>
    </patternset>


    <!-- report:phpmd -->
    <patternset id="patternset.report.phpmd">
        <include name="**/*.php"/>
        <exclude name="tests/**"/>
        <exclude name="vendor/**"/>
    </patternset>


    <!-- report:phpmetrics -->
    <property name="report.phpmetrics.directories" value="src"/>


</project>
