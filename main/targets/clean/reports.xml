<?xml version="1.0" encoding="UTF-8"?>


<project default="clean:reports">


    <target name="clean:reports:init" depends="commons:init">
        <property name="cleanReportsDescription" value="cleanup project reports directory"/>
    </target>


    <target name="clean:reports:help" depends="clean:reports:init">
        <echo message="${cleanReportsDescription}"/>
    </target>


    <target name="clean:reports" depends="clean:reports:init, clean:reports:before, clean:reports:main, clean:reports:after">
        <echo message="successful"/>
    </target>


    <target name="clean:reports:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="clean:reports:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="clean:reports:main">
        <delete dir="${projectDirBuildReports}"/>
        <mkdir dir="${projectDirBuildReports}"/>
    </target>


</project>