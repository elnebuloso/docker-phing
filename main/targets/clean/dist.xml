<?xml version="1.0" encoding="UTF-8"?>


<project default="clean:dist">


    <target name="clean:dist:init">
        <property name="cleanDistDescription" value="cleanup project distribution directory"/>
    </target>


    <target name="clean:dist:help" depends="clean:dist:init">
        <echo message="${cleanDistDescription}"/>
    </target>


    <target name="clean:dist" depends="clean:dist:init, clean:dist:before, clean:dist:main, clean:dist:after">
        <echo message="successful"/>
    </target>


    <target name="clean:dist:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="clean:dist:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="clean:dist:main">
        <delete dir="${projectDirBuildDist}"/>
        <mkdir dir="${projectDirBuildDist}"/>
    </target>


</project>