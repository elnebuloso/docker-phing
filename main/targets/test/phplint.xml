<?xml version="1.0" encoding="UTF-8"?>


<project default="test:phplint">


    <property name="testPhpLintDescription" value="php code validation and linting" override="true"/>
    <property name="testPhpLintOutput" value="${projectDirBuildReports}/phplint" override="true"/>
    <property name="testPhpLintInterpreter" value="7.3"/>
    <property name="testPhpLintHaltOnFailure" value="1"/>


    <target name="test:phplint:help">
        <echo message="${testPhpLintDescription}"/>

        <echo message=""/>
        <echo message="property                    value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="testPhpLintInterpreter      ${testPhpLintInterpreter}"/>
        <echo message="testPhpLintHaltOnFailure    ${testPhpLintHaltOnFailure}"/>
    </target>


    <target name="test:phplint">
        <delete dir="${testPhpLintOutput}/${testPhpLintInterpreter}"/>
        <mkdir dir="${testPhpLintOutput}/${testPhpLintInterpreter}"/>
        <mkdir dir="${projectDirBuildTmp}"/>

        <phplint interpreter="php${testPhpLintInterpreter}" tofile="${testPhpLintOutput}/${testPhpLintInterpreter}/report.txt" haltonfailure="${testPhpLintHaltOnFailure}" cachefile="${projectDirBuildTmp}/phplint.cache.${testPhpLintInterpreter}" level="info">
            <fileset dir="${project.dir.main}">
                <patternset refid="patternset.test.phplint"/>
            </fileset>
        </phplint>
    </target>


</project>