<?xml version="1.0" encoding="UTF-8"?>


<project default="test:phplint">


    <property name="testPhpLintDescription" value="php code validation and linting" override="true"/>


    <target name="test:phplint:init">
        <property name="testPhpLintOutput" value="${project_dir_build_reports}/phplint"/>
        <property name="testPhpLintInterpreter" value="7.3"/>
        <property name="testPhpLintHaltOnFailure" value="1"/>
    </target>


    <target name="test:phplint:help" depends="test:phplint:init">
        <echo message="${testPhpLintDescription}"/>

        <echo message=""/>
        <echo message="property                    value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="testPhpLintInterpreter      ${testPhpLintInterpreter}"/>
        <echo message="testPhpLintHaltOnFailure    ${testPhpLintHaltOnFailure}"/>
    </target>


    <target name="test:phplint" depends="test:phplint:init, test:phplint:before, test:phplint:main, test:phplint:after">
        <echo message="successful"/>
    </target>


    <target name="test:phplint:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="test:phplint:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="test:phplint:main">
        <delete dir="${testPhpLintOutput}/${testPhpLintInterpreter}"/>
        <mkdir dir="${testPhpLintOutput}/${testPhpLintInterpreter}"/>
        <mkdir dir="${project_dir_build_tmp}"/>

        <phplint interpreter="php${testPhpLintInterpreter}" tofile="${testPhpLintOutput}/${testPhpLintInterpreter}/report.txt" haltonfailure="${testPhpLintHaltOnFailure}" cachefile="${project_dir_build_tmp}/phplint.cache.${testPhpLintInterpreter}" level="info">
            <fileset dir="${project_dir_main}">
                <patternset refid="patternset_test_phplint"/>
            </fileset>
        </phplint>
    </target>


</project>