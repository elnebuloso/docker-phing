<?xml version="1.0" encoding="UTF-8"?>


<project default="compass:watch">


    <property name="compass.watch.description" value="compass watch scss" override="true"/>


    <target name="compass:watch:help">
        <echo message="${compass.watch.description}"/>
    </target>


    <target name="compass:watch">
        <exec command="compass watch --poll" passthru="true" checkreturn="true" level="info" dir="${project.dir.main.compass}"/>
    </target>


</project>