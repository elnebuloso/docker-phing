<?xml version="1.0" encoding="UTF-8"?>


<project default="compass:watch">


    <target name="compass:watch:init">
        <property name="compassWatchDescription" value="compass watch scss"/>
    </target>


    <target name="compass:watch:help" depends="compass:watch:init">
        <echo message="${compassWatchDescription}"/>
    </target>


    <target name="compass:watch" depends="compass:watch:init, compass:watch:before, compass:watch:main, compass:watch:after">
        <echo message="successful"/>
    </target>


    <target name="compass:watch:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="compass:watch:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="compass:watch:main">
        <exec command="compass watch --poll" passthru="true" checkreturn="true" level="info" dir="${projectDirMainCompass}"/>
    </target>


</project>