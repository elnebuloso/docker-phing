<?xml version="1.0" encoding="UTF-8"?>


<project default="compass:compile">


    <target name="compass:compile:init" depends="commons:init">
        <property name="compassCompileDescription" value="compass compile scss"/>
    </target>


    <target name="compass:compile:help" depends="compass:compile:init">
        <echo message="${compassCompileDescription}"/>
    </target>


    <target name="compass:compile" depends="compass:compile:init, compass:compile:before, compass:compile:main, compass:compile:after">
        <echo message="successful"/>
    </target>


    <target name="compass:compile:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="compass:compile:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="compass:compile:main">
        <exec command="compass compile" passthru="true" checkreturn="true" level="info" dir="${projectDirMainCompass}"/>
    </target>


</project>