<?xml version="1.0" encoding="UTF-8"?>


<project default="init:bolt3">


    <property name="initBolt3Description" value="init bolt3 application" override="true"/>


    <target name="init:bolt3:help">
        <echo message="${initBolt3Description}"/>
    </target>


    <target name="init:bolt3" depends="init:bolt3:before, init:bolt3:main, init:bolt3:after">
        <echo message="successful"/>
    </target>


    <target name="init:bolt3:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="init:bolt3:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="init:bolt3:main">
        <fail message="${projectDirMain} exists for creating bolt3 application">
            <condition>
                <available file="${projectDirMain}" type="dir"/>
            </condition>
        </fail>

        <exec command="composer create-project --prefer-dist --no-interaction --no-dev --remove-vcs --ignore-platform-reqs bolt/composer-install:^3 ${projectDirMain}" passthru="true" checkreturn="true" level="info"/>
        <delete dir="${projectDirMain}/.git" quiet="true"/>

        <copy todir="${projectRoot}" overwrite="true">
            <fileset dir="${phingCommonsRoot}/resources/init/bolt3/0">
                <include name="**"/>
            </fileset>
        </copy>

        <my-configure-composer selector="name" value="my/${projectName}"/>
        <my-configure-composer selector="config.platform.php" value="7.3"/>
        <my-configure-composer selector="config.platform.ext-exif" value="1.0"/>
        <my-configure-composer selector="config.platform.ext-gd" value="1.0"/>
    </target>


</project>
