<?xml version="1.0" encoding="UTF-8"?>


<project default="init:laravel5">


    <property name="init_laravel5_description" value="init laravel application" override="true"/>


    <target name="init:laravel5:init" hidden="true">
        <property name="init_laravel5_url" value="laravel5.127.0.0.1.xip.io"/>
    </target>


    <target name="init:laravel5:help" depends="init:laravel5:init">
        <echo message="${init_laravel5_description}"/>
    </target>


    <target name="init:laravel5" depends="clean:dist, init:laravel5:init, init:laravel5:before, init:laravel5:main, init:laravel5:after">
        <echo message="browse application after docker start, using phing start"/>
        <echo message="${init_laravel5_url}"/>
    </target>


    <target name="init:laravel5:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="init:laravel5:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="init:laravel5:main" hidden="true">
        <fail message="${project_dir_main} exists for creating laravel5 application">
            <condition>
                <available file="${project_dir_main}" type="dir"/>
            </condition>
        </fail>

        <exec command="composer create-project --prefer-dist --remove-vcs laravel/laravel:^5 ${project_dir_main}" passthru="true" checkreturn="true" level="info"/>
        <delete dir="${project_dir_main}/.git" quiet="true"/>

        <copy todir="${project_root}" overwrite="true">
            <fileset dir="${phing_commons_root}/resources/init/laravel5/0">
                <include name="**"/>
            </fileset>
            <filterchain>
                <expandproperties/>
            </filterchain>
        </copy>

        <my-configure-composer selector="name" value="my/${project_name}"/>
        <phingcall target="composer:update"/>
    </target>


</project>
