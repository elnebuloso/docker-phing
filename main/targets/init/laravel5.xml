<?xml version="1.0" encoding="UTF-8"?>


<project default="init:laravel5">


    <target name="init:laravel5:init" depends="commons:init">
        <property name="initLaravel5Description" value="init laravel application"/>
        <property name="initLaravel5Url" value="laravel5.127.0.0.1.xip.io"/>
    </target>


    <target name="init:laravel5:help" depends="init:laravel5:init">
        <echo message="${initLaravel5Description}"/>
    </target>


    <target name="init:laravel5" depends="init:laravel5:init, init:laravel5:before, init:laravel5:main, init:laravel5:after">
        <echo message="browse application after docker start"/>
        <echo message="${initLaravel5Url}"/>
    </target>


    <target name="init:laravel5:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="init:laravel5:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="init:laravel5:main">
        <fail message="${projectDirMain} exists for creating laravel application">
            <condition>
                <available file="${projectDirMain}" type="dir"/>
            </condition>
        </fail>

        <exec command="composer create-project --prefer-dist --remove-vcs laravel/laravel:^5 ${projectDirMain}" passthru="true" checkreturn="true" level="info"/>
        <delete dir="${projectDirMain}/.git" quiet="true"/>

        <copy todir="${projectRoot}" overwrite="true">
            <fileset dir="${phingCommonsRoot}/resources/init/laravel5/0">
                <include name="**"/>
            </fileset>
            <filterchain>
                <expandproperties/>
            </filterchain>
        </copy>

        <my-configure-composer selector="name" value="my/${projectName}"/>
        <my-configure-composer selector="config.platform.php" value="7.3"/>
        <phingcall target="composer:update"/>
    </target>


</project>
