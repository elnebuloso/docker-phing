<?xml version="1.0" encoding="UTF-8"?>


<project default="init:laravel-lumen5">


    <property name="init.laravel-lumen5.description" value="init laravel-lumen5 application" override="true"/>


    <target name="init:laravel-lumen5:help">
        <echo message="${init.laravel-lumen5.description}"/>
    </target>


    <target name="init:laravel-lumen5:before">
        <echo message="not implemented"/>
    </target>


    <target name="init:laravel-lumen5" depends="init:laravel-lumen5:before">
        <fail message="${project.dir.main} exists for creating laravel-lumen5 application">
            <condition>
                <available file="${project.dir.main}" type="dir"/>
            </condition>
        </fail>

        <exec command="composer create-project --prefer-dist --no-dev --remove-vcs laravel/lumen ${project.dir.main} ^5" passthru="true" checkreturn="true" level="info"/>
        <delete dir="${project.dir.main}/.git" quiet="true"/>

        <copy todir="${project.root}" overwrite="true">
            <fileset dir="${phing.commons.root}/resources/init/laravel-lumen5/0">
                <include name="**"/>
            </fileset>
        </copy>
    </target>


</project>
