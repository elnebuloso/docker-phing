<?xml version="1.0" encoding="UTF-8"?>


<project>


    <import file="${phing_commons_root}/targets/npm/install.xml"/>
    <import file="${phing_commons_root}/targets/npm/run.xml"/>
    <import file="${phing_commons_root}/targets/npm/upgrade.xml"/>


    <target name="npm:help">
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="target         description"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npm:install    ${npm_install_description}"/>
        <echo message="npm:run        ${npm_run_description}"/>
        <echo message="npm:upgrade    ${npm_upgrade_description}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
    </target>


    <target name="npm:base:help" depends="npm:base:init">
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="property          value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npm_executable    ${npm_executable}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
    </target>


    <target name="npm:base:init" hidden="true">
        <property name="npm_executable" value="npm"/>
    </target>


</project>
