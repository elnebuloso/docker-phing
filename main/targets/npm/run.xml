<?xml version="1.0" encoding="UTF-8"?>


<project default="npm:run">


    <property name="npmRunDescription" value="npm watch files" override="true"/>
    <property name="npmRunScript" value=""/>
    <property name="npmExecutable" value="npm"/>


    <target name="npm:run:help">
        <echo message="${npmRunDescription}"/>

        <echo message=""/>
        <echo message="property         value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npmRunScript     ${npmRunScript}"/>
        <echo message="npmExecutable    ${npmExecutable}"/>
    </target>


    <target name="npm:run">
        <exec command="${npmExecutable} run ${npmRunScript}" passthru="true" checkreturn="true" level="info" dir="${projectDirMainNpm}"/>
    </target>


</project>
