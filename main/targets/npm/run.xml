<?xml version="1.0" encoding="UTF-8"?>


<project default="npm:run">


    <property name="npmRunDescription" value="npm run script" override="true"/>


    <target name="npm:run:init">
        <property name="npmRunScript" value=""/>
        <property name="npmExecutable" value="npm"/>
    </target>


    <target name="npm:run:help" depends="npm:run:init">
        <echo message="${npmRunDescription}"/>

        <echo message=""/>
        <echo message="property         value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npmRunScript     ${npmRunScript}"/>
        <echo message="npmExecutable    ${npmExecutable}"/>
    </target>


    <target name="npm:run" depends="npm:run:init, npm:run:before, npm:run:main, npm:run:after">
        <echo message="successful"/>
    </target>


    <target name="npm:run:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="npm:run:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="npm:run:main">
        <exec command="${npmExecutable} run ${npmRunScript}" passthru="true" checkreturn="true" level="info" dir="${project_dir_main_npm}"/>
    </target>


</project>
