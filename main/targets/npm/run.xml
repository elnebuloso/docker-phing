<?xml version="1.0" encoding="UTF-8"?>


<project default="npm:run">


    <property name="npm.run.description" value="npm watch files" override="true"/>
    <property name="npm.executable" value="npm"/>
    <property name="npm.run.script" value=""/>


    <target name="npm:run:help">
        <echo message="${npm.run.description}"/>

        <echo message=""/>
        <echo message="property          value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npm.executable    ${npm.executable}"/>
        <echo message="npm.run.script    ${npm.run.script}"/>
    </target>


    <target name="npm:run">
        <exec command="${npm.executable} run ${npm.run.script}" passthru="true" checkreturn="true" level="info" dir="${projectDirMainNpm}"/>
    </target>


</project>
