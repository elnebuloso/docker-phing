<?xml version="1.0" encoding="UTF-8"?>


<project default="npm:install">


    <target name="npm:install:init" depends="commons:init">
        <property name="npmInstallDescription" value="npm install dependencies"/>
        <property name="npmExecutable" value="npm"/>
    </target>


    <target name="npm:install:help" depends="npm:install:init">
        <echo message="${npmInstallDescription}"/>

        <echo message=""/>
        <echo message="property         value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npmExecutable    ${npmExecutable}"/>
    </target>


    <target name="npm:install" depends="npm:install:init, npm:install:before, npm:install:main, npm:install:after">
        <echo message="successful"/>
    </target>


    <target name="npm:install:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="npm:install:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="npm:install:main">
        <exec command="${npmExecutable} install" passthru="true" checkreturn="true" level="info" dir="${projectDirMainNpm}"/>
    </target>


</project>
