<?xml version="1.0" encoding="UTF-8"?>


<project default="npm:build:development">


    <property name="npm.build.development.description" value="npm run build development" override="true"/>
    <property name="npm.executable" value="npm"/>
    <property name="npm.build.development.run" value="dev"/>


    <target name="npm:build:development:help">
        <echo message="${npm.build.development.description}"/>

        <echo message=""/>
        <echo message="property                     value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npm.executable               ${npm.executable}"/>
        <echo message="npm.build.development.run    ${npm.build.development.run}"/>
    </target>


    <target name="npm:build:development">
        <exec command="npm run ${npm.build.development.run}" passthru="true" checkreturn="true" level="info" dir="${project.dir.main.npm}"/>
    </target>


</project>
