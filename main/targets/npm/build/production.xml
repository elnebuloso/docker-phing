<?xml version="1.0" encoding="UTF-8"?>


<project default="npm:build:production">


    <property name="npm.build.production.description" value="npm run build production" override="true"/>
    <property name="npm.executable" value="npm"/>
    <property name="npm.build.production.run" value="build"/>


    <target name="npm:build:production:help">
        <echo message="${npm.build.production.description}"/>

        <echo message=""/>
        <echo message="property                    value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="npm.executable              ${npm.executable}"/>
        <echo message="npm.build.production.run    ${npm.build.production.run}"/>
    </target>


    <target name="npm:build:production">
        <exec command="npm run ${npm.build.production.run}" passthru="true" checkreturn="true" level="info" dir="${project.dir.main.npm}"/>
    </target>


</project>
