<?xml version="1.0" encoding="UTF-8"?>


<project default="report:phploc">


    <property name="report.phploc.description" value="php lines of code" override="true"/>
    <property name="report.phploc.output" value="${project.dir.build.reports}/phploc" override="true"/>


    <target name="report:phploc:help">
        <echo message="${report.phploc.description}"/>
    </target>


    <target name="report:phploc">
        <delete dir="${report.phploc.output}"/>
        <mkdir dir="${report.phploc.output}"/>

        <phploc pharlocation="${phing.commons.root}/resources/phar/phploc-2.1.5.phar" reportType="xml" reportName="report" reportDirectory="${report.phploc.output}">
            <fileset dir="${project.dir.main}">
                <patternset refid="patternset.report.phploc"/>
            </fileset>
        </phploc>

        <xslt file="${report.phploc.output}/report.xml" tofile="${report.phploc.output}/report-v1.html" style="${phing.commons.root}/resources/xsl/phploc-v1.xsl"/>
        <xslt file="${report.phploc.output}/report.xml" tofile="${report.phploc.output}/report-v2.html" style="${phing.commons.root}/resources/xsl/phploc-v2.xsl"/>
        <copy file="${report.phploc.output}/report-v2.html" tofile="${report.phploc.output}/index.html"/>
    </target>


</project>
