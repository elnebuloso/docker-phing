<?xml version="1.0" encoding="UTF-8"?>


<project default="report:phpmd">


    <target name="report:phpmd:init">
        <property name="reportPhpMdDescription" value="php mess detection"/>
        <property name="reportPhpMdOutput" value="${projectDirBuildReports}/phpmd"/>
        <property name="reportPhpMdRulesets" value="cleancode,codesize,design,unusedcode"/>
        <property name="reportPhpMdAllowedFileExtensions" value="php,phtml"/>
    </target>


    <target name="report:phpmd:help" depends="report:phpmd:init">
        <echo message="${reportPhpMdDescription}"/>

        <echo message=""/>
        <echo message="property                            value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="reportPhpMdRulesets                 ${reportPhpMdRulesets}"/>
        <echo message="reportPhpMdAllowedFileExtensions    ${reportPhpMdAllowedFileExtensions}"/>
    </target>


    <target name="report:phpmd" depends="report:phpmd:init, report:phpmd:before, report:phpmd:main, report:phpmd:after">
        <echo message="successful"/>
    </target>


    <target name="report:phpmd:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="report:phpmd:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="report:phpmd:main">
        <delete dir="${reportPhpMdOutput}"/>
        <mkdir dir="${reportPhpMdOutput}"/>

        <phpmd pharlocation="${phingCommonsRoot}/resources/phar/phpmd-2.6.0.phar" rulesets="${reportPhpMdRulesets}" allowedFileExtensions="${reportPhpMdAllowedFileExtensions}">
            <fileset dir="${projectDirMain}">
                <patternset refid="patternsetReportPhpMd"/>
            </fileset>
            <formatter type="xml" outfile="${reportPhpMdOutput}/report.xml"/>
        </phpmd>

        <xslt file="${reportPhpMdOutput}/report.xml" tofile="${reportPhpMdOutput}/report-v1.html" style="${phingCommonsRoot}/resources/xsl/phpmd-v1.xsl"/>
        <xslt file="${reportPhpMdOutput}/report.xml" tofile="${reportPhpMdOutput}/report-v2.html" style="${phingCommonsRoot}/resources/xsl/phpmd-v2.xsl"/>
        <copy file="${reportPhpMdOutput}/report-v2.html" tofile="${reportPhpMdOutput}/index.html"/>
    </target>


</project>
