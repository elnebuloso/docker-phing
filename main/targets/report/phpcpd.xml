<?xml version="1.0" encoding="UTF-8"?>


<project default="report:phpcpd">


    <property name="report.phpcpd.description" value="php copy and paste detection" override="true"/>
    <property name="report.phpcpd.output" value="${project.dir.build.reports}/phpcpd" override="true"/>


    <target name="report:phpcpd:help">
        <echo message="${report.phpcpd.description}"/>
    </target>


    <target name="report:phpcpd">
        <delete dir="${report.phpcpd.output}"/>
        <mkdir dir="${report.phpcpd.output}"/>

        <phpcpd pharlocation="${phing.commons.root}/resources/phar/phpcpd-2.0.4.phar">
            <fileset dir="${project.dir.main}">
                <patternset refid="patternset.report.phpcpd"/>
            </fileset>
            <formatter type="pmd" outfile="${report.phpcpd.output}/report.xml"/>
        </phpcpd>

        <xslt file="${report.phpcpd.output}/report.xml" tofile="${report.phpcpd.output}/report-v1.html" style="${phing.commons.root}/resources/xsl/phpcpd-v1.xsl"/>
        <xslt file="${report.phpcpd.output}/report.xml" tofile="${report.phpcpd.output}/report-v2.html" style="${phing.commons.root}/resources/xsl/phpcpd-v2.xsl"/>
        <copy file="${report.phpcpd.output}/report-v2.html" tofile="${report.phpcpd.output}/index.html"/>
    </target>


</project>
