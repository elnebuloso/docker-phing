<?xml version="1.0" encoding="UTF-8"?>


<project default="report:phpcpd">


    <target name="report:phpcpd:init">
        <property name="reportPhpCpdDescription" value="php copy and paste detection"/>
        <property name="reportPhpCpdOutput" value="${projectDirBuildReports}/phpcpd"/>
    </target>


    <target name="report:phpcpd:help" depends="report:phpcpd:init">
        <echo message="${reportPhpCpdDescription}"/>
    </target>


    <target name="report:phpcpd" depends="report:phpcpd:init, report:phpcpd:before, report:phpcpd:main, report:phpcpd:after">
        <echo message="successful"/>
    </target>


    <target name="report:phpcpd:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="report:phpcpd:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="report:phpcpd:main">
        <delete dir="${reportPhpCpdOutput}"/>
        <mkdir dir="${reportPhpCpdOutput}"/>

        <phpcpd pharlocation="${phingCommonsRoot}/resources/phar/phpcpd-2.0.4.phar">
            <fileset dir="${projectDirMain}">
                <patternset refid="patternsetReportPhpCpd"/>
            </fileset>
            <formatter type="pmd" outfile="${reportPhpCpdOutput}/report.xml"/>
        </phpcpd>

        <xslt file="${reportPhpCpdOutput}/report.xml" tofile="${reportPhpCpdOutput}/report-v1.html" style="${phingCommonsRoot}/resources/xsl/phpcpd-v1.xsl"/>
        <xslt file="${reportPhpCpdOutput}/report.xml" tofile="${reportPhpCpdOutput}/report-v2.html" style="${phingCommonsRoot}/resources/xsl/phpcpd-v2.xsl"/>
        <copy file="${reportPhpCpdOutput}/report-v2.html" tofile="${reportPhpCpdOutput}/index.html"/>
    </target>


</project>
