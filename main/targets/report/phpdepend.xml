<?xml version="1.0" encoding="UTF-8"?>


<project default="report:phpdepend">


    <target name="report:phpdepend:init">
        <property name="reportPhpDependDescription" value="php software metrics"/>
        <property name="reportPhpDependOutput" value="${projectDirBuildReports}/phpdepend"/>
    </target>


    <target name="report:phpdepend:help" depends="report:phpdepend:init">
        <echo message="${reportPhpDependDescription}"/>
    </target>


    <target name="report:phpdepend" depends="report:phpdepend:init, report:phpdepend:before, report:phpdepend:main, report:phpdepend:after">
        <echo message="successful"/>
    </target>


    <target name="report:phpdepend:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="report:phpdepend:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="report:phpdepend:main">
        <delete dir="${reportPhpDependOutput}"/>
        <mkdir dir="${reportPhpDependOutput}"/>

        <phpdepend pharlocation="${phingCommonsRoot}/resources/phar/pdepend-2.5.0.phar">
            <fileset dir="${projectDirMain}">
                <patternset refid="patternsetReportPhpDepend"/>
            </fileset>
            <logger type="jdepend-xml" outfile="${reportPhpDependOutput}/report.xml"/>
            <logger type="jdepend-chart" outfile="${reportPhpDependOutput}/assets/chart.svg"/>
            <logger type="overview-pyramid" outfile="${reportPhpDependOutput}/assets/pyramid.svg"/>
            <analyzer type="coderank-mode" value="method"/>
        </phpdepend>

        <xslt file="${reportPhpDependOutput}/report.xml" tofile="${reportPhpDependOutput}/report-v1.html" style="${phingCommonsRoot}/resources/xsl/phpdepend-v1.xsl"/>
        <xslt file="${reportPhpDependOutput}/report.xml" tofile="${reportPhpDependOutput}/report-v2.html" style="${phingCommonsRoot}/resources/xsl/phpdepend-v2.xsl"/>
        <copy file="${reportPhpDependOutput}/report-v2.html" tofile="${reportPhpDependOutput}/index.html"/>
    </target>


</project>
