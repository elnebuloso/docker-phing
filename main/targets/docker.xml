<?xml version="1.0" encoding="UTF-8"?>


<project>


    <import file="${phing_commons_root}/targets/docker/compose/down.xml"/>
    <import file="${phing_commons_root}/targets/docker/compose/ps.xml"/>
    <import file="${phing_commons_root}/targets/docker/compose/pull.xml"/>
    <import file="${phing_commons_root}/targets/docker/compose/up.xml"/>
    <import file="${phing_commons_root}/targets/docker/build.xml"/>
    <import file="${phing_commons_root}/targets/docker/push.xml"/>


    <target name="docker:init">
        <property name="dockerRegistry" value=""/>
        <property name="dockerRegistryNamespace" value=""/>
        <property name="dockerImageName" value="${projectName}"/>
        <property name="dockerImageVersion" value="${project_version}"/>
        <property name="branchNameMaster" value="master"/>
        <property name="branchName" value=""/>
        <property name="buildNumber" value=""/>
        <my-docker-config/>
    </target>


    <target name="docker:help" depends="docker:init">
        <echo message="target                 description"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="docker:compose:down           ${dockerComposeDownDescription}"/>
        <echo message="docker:compose:ps             ${dockerComposePsDescription}"/>
        <echo message="docker:compose:pull           ${dockerComposePullDescription}"/>
        <echo message="docker:compose:up             ${dockerComposeUpDescription}"/>
        <echo message="docker:build                  ${dockerBuildDescription}"/>
        <echo message="docker:push                   ${dockerPushDescription}"/>
        <echo message=""/>
        <echo message="property                      value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="dockerRegistry                ${dockerRegistry}"/>
        <echo message="dockerRegistryNamespace       ${dockerRegistryNamespace}"/>
        <echo message="dockerImageName               ${dockerImageName}"/>
        <echo message="dockerImageVersion            ${dockerImageVersion}"/>
        <echo message="branchName                    ${branchName}"/>
        <echo message="buildNumber                   ${buildNumber}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="dockerConfigImageVersion      ${dockerConfigImageVersion}" level="warning"/>
        <echo message="dockerConfigImage             ${dockerConfigImage}" level="warning"/>
        <echo message="dockerConfigImageTag          ${dockerConfigImageTag}" level="warning"/>
        <echo message="dockerConfigImageTagLatest    ${dockerConfigImageTagLatest}" level="warning"/>
        <echo message="dockerConfigImageTagMajor     ${dockerConfigImageTagMajor}" level="warning"/>
        <echo message="dockerConfigImageTagMinor     ${dockerConfigImageTagMinor}" level="warning"/>
        <echo message="dockerConfigImageTagPatch     ${dockerConfigImageTagPatch}" level="warning"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
    </target>


</project>
