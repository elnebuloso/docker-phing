<?xml version="1.0" encoding="UTF-8"?>


<project default="docker:compose:down">


    <property name="docker_compose_down_description" value="stop docker compose stack" override="true"/>


    <target name="docker:compose:down:init" hidden="true">
        <property name="docker_compose_down_options" value="--remove-orphans"/>
    </target>


    <target name="docker:compose:down:help" depends="docker:compose:down:init">
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="${docker_compose_down_description}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="property                       value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="docker_compose_down_options    ${docker_compose_down_options}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
    </target>


    <target name="docker:compose:down" depends="docker:compose:down:init, docker:compose:down:before, docker:compose:down:main, docker:compose:down:after">
        <echo message="successful"/>
    </target>


    <target name="docker:compose:down:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="docker:compose:down:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="docker:compose:down:main" hidden="true">
        <exec command="docker-compose down ${docker_compose_down_options}" passthru="true" checkreturn="true" level="info"/>
    </target>


</project>
