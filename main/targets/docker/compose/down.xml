<?xml version="1.0" encoding="UTF-8"?>


<project default="docker:compose:down">


    <property name="dockerComposeDownDescription" value="stop docker compose stack" override="true"/>


    <target name="docker:compose:down:init">
        <property name="dockerComposeDownOptions" value="--remove-orphans"/>
    </target>


    <target name="docker:compose:down:help" depends="docker:compose:down:init">
        <echo message="${dockerComposeDownDescription}"/>

        <echo message=""/>
        <echo message="property                    value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="dockerComposeDownOptions    ${dockerComposeDownOptions}"/>
    </target>


    <target name="docker:compose:down" depends="docker:compose:down:init, docker:compose:down:before, docker:compose:down:main, docker:compose:down:after">
        <echo message="successful"/>
    </target>


    <target name="docker:compose:down:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="docker:compose:down:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="docker:compose:down:main">
        <exec command="docker-compose down ${dockerComposeDownOptions}" passthru="true" checkreturn="true" level="info"/>
    </target>


</project>
