<?xml version="1.0" encoding="UTF-8"?>


<project default="docker:compose:up">


    <property name="dockerComposeUpDescription" value="start docker compose stack" override="true"/>


    <target name="docker:compose:up:init">
        <property name="dockerComposeUpOptions" value="--build --remove-orphans -d"/>
    </target>


    <target name="docker:compose:up:help" depends="docker:compose:up:init">
        <echo message="${dockerComposeUpDescription}"/>

        <echo message=""/>
        <echo message="property                  value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="dockerComposeUpOptions    ${dockerComposeUpOptions}"/>
    </target>


    <target name="docker:compose:up" depends="docker:compose:up:init, docker:compose:up:before, docker:compose:up:main, docker:compose:up:after">
        <echo message="successful"/>
    </target>


    <target name="docker:compose:up:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="docker:compose:up:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="docker:compose:up:main">
        <exec command="docker-compose up ${dockerComposeUpOptions}" passthru="true" checkreturn="true" level="info"/>
    </target>


</project>
