<?xml version="1.0" encoding="UTF-8"?>


<project default="docker:compose:up">


    <property name="docker.compose.up.description" value="start docker compose stack" override="true"/>
    <property name="docker.compose.up.options" value="--build --remove-orphans -d"/>


    <target name="docker:compose:up:help">
        <echo message="${docker.compose.up.description}"/>

        <echo message=""/>
        <echo message="property                     value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="docker.compose.up.options    ${docker.compose.up.options}"/>
    </target>


    <target name="docker:compose:up">
        <exec command="docker-compose up ${docker.compose.up.options}" passthru="true" checkreturn="true" level="info"/>
    </target>


</project>
