<?xml version="1.0" encoding="UTF-8"?>


<project default="bundle:project">


    <target name="bundle:project:init">
        <property name="bundleProjectDescription" value="bundle files defined by patternset to dist"/>
    </target>


    <target name="bundle:project:help" depends="bundle:project:init">
        <echo message="${bundleProjectDescription}"/>
    </target>


    <target name="bundle:project" depends="bundle:project:init, bundle:project:before, bundle:project:main, bundle:project:after">
        <echo message="successful"/>
    </target>


    <target name="bundle:project:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="bundle:project:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="bundle:project:main">
        <delete dir="${projectDirBuildDist}/${projectFolderMain}"/>

        <copy todir="${projectDirBuildDist}">
            <fileset dir="${projectRoot}">
                <patternset refid="patternsetBundleProject"/>
            </fileset>
        </copy>
    </target>


</project>
