<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:install:production">


    <property name="composerInstallProductionDescription" value="composer install for production" override="true"/>


    <target name="composer:install:production:init">
        <property name="composerInstallProductionOptions" value=""/>
    </target>


    <target name="composer:install:production:help" depends="composer:install:production:init">
        <echo message="${composerInstallProductionDescription}"/>

        <echo message=""/>
        <echo message="property                            value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composerInstallProductionOptions    ${composerInstallProductionOptions}"/>
    </target>


    <target name="composer:install:production" depends="composer:install:production:init, composer:install:production:before, composer:install:production:main, composer:install:production:after">
        <echo message="successful"/>
    </target>


    <target name="composer:install:production:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:install:production:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:install:production:main">
        <phingcall target="composer:command">
            <property name="composerCommand" value="composer install --no-suggest --no-ansi --no-interaction --no-dev --optimize-autoloader ${composerInstallProductionOptions}" override="true"/>
        </phingcall>
    </target>


</project>