<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:install:production">


    <property name="composer.install.production.description" value="composer install for production" override="true"/>
    <property name="composer.install.production.options" value=""/>


    <target name="composer:install:production:help">
        <echo message="${composer.install.production.description}"/>

        <echo message=""/>
        <echo message="property                               value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composer.install.production.options    ${composer.install.production.options}"/>
    </target>


    <target name="composer:install:production">
        <exec command="composer install --no-suggest --no-ansi --no-interaction --no-dev --optimize-autoloader ${composer.install.production.options}" passthru="true" checkreturn="true" level="info" dir="${project.dir.main.composer}"/>
    </target>


</project>