<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:update">


    <property name="composer_update_description" value="composer update dependencies" override="true"/>


    <target name="composer:update:init" hidden="true">
        <property name="composer_update_options" value=""/>
    </target>


    <target name="composer:update:help" depends="composer:update:init, composer:base:help">
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="${composer_update_description}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="property                   value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composer_update_options    ${composer_update_options}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
    </target>


    <target name="composer:update" depends="composer:update:init, composer:base:init, composer:update:before, composer:update:main, composer:base:command, composer:update:after">
        <echo message="successful"/>
    </target>


    <target name="composer:update:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:update:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:update:main" hidden="true">
        <property name="composer_command" value="composer update --no-suggest --no-ansi --no-interaction ${composer_update_options}" override="true"/>
    </target>


</project>
