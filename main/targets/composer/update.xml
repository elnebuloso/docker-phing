<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:update">


    <property name="composer.update.description" value="composer update dependencies" override="true"/>
    <property name="composer.update.options" value=""/>


    <target name="composer:update:help">
        <echo message="${composer.update.description}"/>

        <echo message=""/>
        <echo message="property                   value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composer.update.options    ${composer.update.options}"/>
    </target>


    <target name="composer:update">
        <exec command="composer update --no-suggest --no-ansi --no-interaction ${composer.update.options}" passthru="true" checkreturn="true" level="info" dir="${projectDirMainComposer}"/>
    </target>


</project>