<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:update">


    <property name="composerUpdateDescription" value="composer update dependencies" override="true"/>
    <property name="composerUpdateOptions" value=""/>


    <target name="composer:update:help">
        <echo message="${composerUpdateDescription}"/>

        <echo message=""/>
        <echo message="property                 value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composerUpdateOptions    ${composerUpdateOptions}"/>
    </target>


    <target name="composer:update" depends="composer:update:before, composer:update:main, composer:update:after">
        <echo message="successful"/>
    </target>


    <target name="composer:update:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:update:after" hidden="true">
        <echo message="no actions defined"/>
    </target>
    

    <target name="composer:update:main">
        <exec command="composer update --no-suggest --no-ansi --no-interaction ${composerUpdateOptions}" passthru="true" checkreturn="true" level="info" dir="${projectDirMainComposer}"/>
    </target>


</project>