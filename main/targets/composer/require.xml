<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:require">


    <property name="composerRequireDescription" value="composer require a dependency" override="true"/>


    <target name="composer:require:help">
        <echo message="${composerRequireDescription}"/>
    </target>


    <target name="composer:require" depends="composer:require:before, composer:require:main, composer:require:after">
        <echo message="successful"/>
    </target>


    <target name="composer:require:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:require:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:require:main">
        <input propertyname="composer.require.package" defaultValue="">package (vendor/package)</input>
        <input propertyname="composer.require.options" defaultValue="">options</input>

        <if>
            <not>
                <equals arg1="${composer.require.package}" arg2=""/>
            </not>
            <then>
                <exec command="composer require ${composer.require.package} ${composer.require.options}" passthru="true" checkreturn="true" level="info" dir="${projectDirMainComposer}"/>
            </then>
        </if>
    </target>


</project>