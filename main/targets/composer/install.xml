<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:install">


    <property name="composer_install_description" value="composer install" override="true"/>


    <target name="composer:install:init" depends="composer:base:init" hidden="true">
        <property name="composer_install_options" value=""/>
    </target>


    <target name="composer:install:help" depends="composer:base:help, composer:install:init">
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="${composer_install_description}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="property                    value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composer_install_options    ${composer_install_options}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
    </target>


    <target name="composer:install" depends="composer:install:init, composer:install:before, composer:install:main, composer:install:after">
        <echo message="successful"/>
    </target>


    <target name="composer:install:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:install:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:install:main" hidden="true">
        <phingcall target="composer:base:command">
            <property name="composer_command" value="composer install --no-suggest --no-ansi --no-interaction ${composer_install_options}" override="true"/>
        </phingcall>
    </target>


</project>
