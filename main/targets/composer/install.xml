<?xml version="1.0" encoding="UTF-8"?>


<project default="composer:install">


    <property name="composerInstallDescription" value="composer install" override="true"/>


    <target name="composer:install:init">
        <property name="composerInstallOptions" value=""/>
    </target>


    <target name="composer:install:help" depends="composer:install:init">
        <echo message="${composerInstallDescription}"/>

        <echo message=""/>
        <echo message="property                  value"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composerInstallOptions    ${composerInstallOptions}"/>
        <echo message="----------------------------------------------------------------------------------------------------"/>
        <echo message="composer:help for main configuration"/>
    </target>


    <target name="composer:install" depends="composer:install:init, composer:install:before, composer:install:main, composer:install:after">
        <echo message="successful"/>
    </target>


    <target name="composer:install:before" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:install:after" hidden="true">
        <echo message="no actions defined"/>
    </target>


    <target name="composer:install:main">
        <phingcall target="composer:command">
            <property name="composerCommand" value="composer install --no-suggest --no-ansi --no-interaction ${composerInstallOptions}" override="true"/>
        </phingcall>
    </target>


</project>